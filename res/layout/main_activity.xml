<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    

    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="0dp" 
                  android:layout_weight="1" android:background="#AAAAAA">
                  
        <RelativeLayout 
            android:layout_width="match_parent"
    				android:layout_height="match_parent">
        
        <TextView
            android:id="@+id/tv_main_activity_welcome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_activity_welcome_height"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_marginBottom="@dimen/main_activity_welcome_bottom_margin"
            android:layout_marginLeft="@dimen/main_activity_welcome_horizontal_margin"
            android:layout_marginRight="@dimen/main_activity_welcome_horizontal_margin"
            android:layout_marginTop="@dimen/main_activity_welcome_top_margin"            
            android:text="@string/main_activity_welcome"            
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_activity_welcome_font_size"
            android:textStyle="bold" 
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            style="@style/main_activity_welcome_overlaytext"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_activity_all_visitors_height"
            android:layout_below="@+id/tv_main_activity_welcome"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/main_activity_all_visitors_horizontal_margin"
            android:layout_marginRight="@dimen/main_activity_all_visitors_horizontal_margin"
            android:text="@string/main_activity_all_visitors"
            android:textSize="@dimen/main_activity_all_visitors_font_size"
            android:textStyle="bold"            
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"             
            android:gravity="center"
            style="@style/main_activity_welcome_overlaytext"/>
        
        </RelativeLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:background="#333333" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        
        <Button
            android:id="@+id/btn_main_activity_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/main_activity_signin_left_margin"            
            android:text="@string/main_activity_signin" />

        <Button
            android:id="@+id/btn_main_activity_signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/main_activity_signout_right_margin"
            android:text="@string/main_activity_signout" />
        
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
